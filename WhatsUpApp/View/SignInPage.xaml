<?xml version="1.0" encoding="utf-8" ?>
<ContentPage  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:WhatsUpApp.ViewModel"
             x:Class="WhatsUpApp.View.SignInPage">

    <ContentPage.BindingContext>
        <vm:SignInViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="30">
        <Entry Placeholder="Username" Text="{Binding Username}" WidthRequest="300" />
        <Entry Placeholder="Password" IsPassword="True" Text="{Binding Password}" WidthRequest="300"  />
        <Button Text="Sign In" Command="{Binding SignInCommand}" WidthRequest="300"  />
        <Label Text="Don't have an account?" VerticalOptions="Center" HorizontalOptions="Center" />
        <Button Text="Sign Up" Command="{Binding SignUpCommand}" WidthRequest="300" Margin="10" />
        <Label Text="{Binding ErrorMessage}" TextColor="Red" />

    </StackLayout>
</ContentPage>
